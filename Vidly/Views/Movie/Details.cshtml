@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.RealseDate.Value.ToLongDateString()</li>
    <li>Date Added: @Model.RealseDate.Value.ToLongDateString()</li>
    <li>In Stock: @Model.NumberInStock</li>
</ul>

