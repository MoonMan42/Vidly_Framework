@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customer</h2>

<div class="form-group">
    @Html.ActionLink("Add customer", "New", "Customer", new { @class = "btn btn-primary" })
</div>
@if (!Model.Any())
{
    <p>No customers have been added!</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Discount Rate</th>

            <th>Delete</th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", "Customer", new { id = item.Id }, null)
            </td>
            <td>@item.MembershipType.Name</td>
            <td><button data-customer-id="@item.Id" class="btn-danger js-delete">Delete</button></td>
        </tr>
    }

    </table>
}


@section scripts
{
   <script>
       $(document).ready(function () {
           $("#customers .js-delete").on("click", function () {
               var button = $(this);

               if (confirm("Are you sure you wish to delete this customer?"))
                   $.ajax({
                       url: "/api/customers/" + button.attr("data-customer-id"),
                       method: "DELETE",
                       success: function () {
                           button.parents("tr").remove();
                       }
                   });
           });
       });
    </script>
}